@model KEWIStudents.Models.Account
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3 mb-3">
    <h3>My Profile</h3>
</div>
<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-capitalize text-center">Use Avatar</h3>
                    </div>
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <img class="img-fluid" src="~/assets/images/profile_m.png" alt="Student profile"/>
                    </div>
                    <div class="card-footer d-flex flex-column align-items-center gap-1">
                        <h5 class="mb-1">@Model.StudentName</h5>
                        <div class="mb-1" style="align-self:start;">
                            <span class="fw-bold d-block small"><i class="fa fa-book"></i> Programme</span>
                            <span class="small" style="font-size: 12px;">@Model.Program - @Model.ProgramName</span>
                        </div>                        
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center w-100 small">
                            <span>My Stage</span>
                            <span><a href="#">@Model.Stage <i class="fa fa-chevron-down"></i></a></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <table class="table table-hover w-100">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Personal Information</td>
                            <td><span class="float-end"><a class="btn btn-primary text-capitalize" href="@Url.Action("settings","dashboard")">Update profile</a></span></td>
                        </tr>
                        <tr>
                            <td>Student No:</td>
                            <td><span class="float-end"><a href="#">@Model.StudentNo</a></span></td>
                        </tr>
                        <tr>
                            <td>Student Name:</td>
                            <td><span class="float-end"><a href="#">@Model.StudentName</a></span></td>
                        </tr>
                        <tr>
                            <td>Date of Birth:</td>
                            <td><span class="float-end"><a href="#">@Convert.ToDateTime(Model.DateOfBirth).ToString("dd MMM yyyy")</a></span></td>
                        </tr>
                        <tr>
                            <td>Id Number:</td>
                            <td><span class="float-end"><a href="#">@Model.IdNumber</a></span></td>
                        </tr>
                        <tr>
                            <td>Phone No:</td>
                            <td><span class="float-end"><a href="#">@Model.PhoneNo</a></span></td>
                        </tr>
                        <tr>
                            <td>Email Address:</td>
                            <td><span class="float-end"><a href="#">@Model.Email</a></span></td>
                        </tr>
                        <tr>
                            <td>Postal Address:</td>
                            <td><span class="float-end"><a href="#">@Model.PostalAddress</a></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>