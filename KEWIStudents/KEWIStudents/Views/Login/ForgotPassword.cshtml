
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="card login-card" style="width: 30rem; opacity: .7;">
    <div class="card-body">
        <div class="d-flex justify-content-center align-items-center">
            <img src="~/assets/images/logo.jpg" alt="KEWI logo" class="img-fluid" />
        </div>
        <h5 class="card-title text-uppercase text-center mb-4 text-decoration-underline">Reset Password</h5>
        @if (TempData["Error"] != null)
        {
            <div class="badge bg-danger mb-2">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="badge bg-success mb-2">@TempData["Success"]</div>
        }
        <form action="@Url.Action("resetpassword","login")" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input type="text" name="Username" class="form-control" id="username" placeholder="Username" required value="@ViewBag.StudentNo">
                        <label for="username">Student No</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="Password" class="form-control" id="password" placeholder="Password" required>
                        <label for="password">Password</label>
                        <span class="text-danger" id="password-msg"></span>
                    </div>
                    <div class="form-floating">
                        <input type="password" name="ConfirmPassword" class="form-control" id="confirm-password" placeholder="Confirm Password" required>
                        <label for="confirm-password">Confirm Password</label>
                        <span class="text-danger" id="password-msg"></span>
                    </div>
                </div>
                <div class="col-md-12 mt-5 mb-2">
                    <div class="row d-flex justify-content-between g-3">
                        <div class="col-md-4">
                            <a class="btn btn-warning w-100" href="@Url.Action("index","login")">Back</a>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success w-100" onclick="return validatePasswords()">Reset Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <p class="text-center">Powered by <a class="text-primary text-decoration-none" href="https://appkings.co.ke" target="_blank">Appkings Solutions LTD</a></p>
    </div>
</div>

<script type="text/javascript">
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirm-password');
    const passwordMsg = document.querySelectorAll("#password-msg");

    const validatePasswords = function () {
        if (password.value !== confirmPassword.value) {
            passwordMsg.forEach(item=>item.textContent="Passwords do not match. Please try again!")
            return false;
        }
    }
</script>