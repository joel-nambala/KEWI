<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kenya Water Institute</title>
    <link href="~/assets/images/logo.jpg" rel="icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.bootstrap5.css">
</head>

<body>
    <div class="wrapper">
        <aside id="sidebar" class="js-sidebar">
            <!-- Content For Sidebar -->
            <div class="h-100">
                <div class="sidebar-logo">
                    <a href="@Url.Action("index","dashboard")"><img src="~/assets/images/logo.jpg" alt="KEWI Logo" style="width: 10rem; height: auto;" /></a>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a href="@Url.Action("index","dashboard")" class="sidebar-link">
                            <i class="fa-solid fa-list pe-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-target="#pages" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-money-bill pe-2"></i>
                            Financials
                        </a>
                        <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="@Url.Action("feespayment","finance")" class="sidebar-link">Fee Payment</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="@Url.Action("feestatement","finance")" class="sidebar-link">Fees Statement</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="@Url.Action("feespdf","finance")" class="sidebar-link">Fees Statement (PDF)</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="@Url.Action("paymentreceipts","finance")" class="sidebar-link">Payment Receipts</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-target="#posts" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-graduation-cap pe-2"></i>
                            Academics
                        </a>
                        <ul id="posts" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="@Url.Action("unitregistration","academics")" class="sidebar-link">Register Units</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="#" class="sidebar-link">Provisional Results</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="#" class="sidebar-link">Exam Card</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-target="#settings" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-gear pe-2"></i>
                            Settings
                        </a>
                        <ul id="settings" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="#" class="sidebar-link">Change Password</a>
                            </li>
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="#" class="sidebar-link">Update Profile</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-target="#clearance" data-bs-toggle="collapse"
                           aria-expanded="false">
                            <i class="fa-solid fa-gear pe-2"></i>
                            Clearance
                        </a>
                        <ul id="clearance" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <span>&#10003; &nbsp;</span>
                                <a href="#" class="sidebar-link">Graduation Clearance</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-header text-uppercase">
                        Periodic Activities
                    </li>
                    @if (!AcademicsHelper.IsStudentRegistered())
                    {
                        if (!AcademicsHelper.SemesterRegistrationPassed())
                        {
                            <li class="sidebar-item">
                                <a href="@Url.Action("semesterregistration","academics")" class="sidebar-link">
                                    <i class="fa-solid fa-registered pe-2"></i>
                                    Semester Registration
                                </a>
                            </li>
                        }
                    }
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="fa-solid fa-bullseye pe-2"></i>
                            KEWI Elections
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="fa-solid fa-person pe-2"></i>
                            Lecturer Evaluation
                        </a>
                    </li>
                    @*<li class="sidebar-item">
            <a href="#" class="sidebar-link collapsed" data-bs-target="#multi" data-bs-toggle="collapse"
               aria-expanded="false">
                <i class="fa-solid fa-share-nodes pe-2"></i>
                Multi Dropdown
            </a>
            <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed" data-bs-target="#level-1"
                       data-bs-toggle="collapse" aria-expanded="false">Level 1</a>
                    <ul id="level-1" class="sidebar-dropdown list-unstyled collapse">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Level 1.1</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Level 1.2</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </li>*@
                </ul>
            </div>
        </aside>
        <div class="main">
            <nav class="navbar navbar-expand px-3 border-bottom">
                <button class="btn" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                <img src="~/assets/images/profile_m.png" class="avatar img-fluid rounded" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="@Url.Action("myprofile","dashboard")" class="dropdown-item">Profile</a>
                                <a href="@Url.Action("settings","dashboard")" class="dropdown-item">Setting</a>
                                <a href="@Url.Action("logout","dashboard")" class="dropdown-item">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 py-2">
                @RenderBody()
            </main>
            <a href="#" class="theme-toggle">
                <i class="fa-regular fa-moon"></i>
                <i class="fa-regular fa-sun"></i>
            </a>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-12 text-start">
                            <p class="mb-0">
                                <span href="#" class="text-muted">
                                    <strong>&copy; @DateTime.Now.Year, KEWI. Powered by <a href="#">Appkings Solutions LTD</a></strong>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap5.js"></script>

    <script>
        new DataTable('#example');
    </script>
</body>
</html>