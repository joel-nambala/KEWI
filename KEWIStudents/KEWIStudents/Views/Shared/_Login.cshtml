    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Joel Nambala" />
    <meta name="description" content="Kenya Water Institute students portal" />
    <title>@ViewBag.Title - Kenya Water Institute</title>
    <link href="~/assets/images/logo.jpg" rel="icon" />
